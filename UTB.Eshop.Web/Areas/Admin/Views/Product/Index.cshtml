@model IList<Product>

@{
    ViewData["Title"] = "Advertisement Administration";
}


<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary">Create Advertisement</a>

@{
    if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">@nameof(Product.Id)</th>
                        <th scope="col">@nameof(Product.Name)</th>
                        <th scope="col">@nameof(Product.Description)</th>
                        <th scope="col">@nameof(Product.Price)</th>
                        <th scope="col">@nameof(Product.ImageSrc)</th>
                        <th scope="col">@nameof(Product.Kategory)</th>
                        <th scope="col">@nameof(Product.PhoneNumber)</th>
                        <th scope="col">@nameof(Product.Email)</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; ++i)
                    {
                        <tr>
                            <th scope="row">@Model[i].Id</th>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Description</td>
                            <td>@Model[i].Price</td>
                            <td>@Model[i].ImageSrc</td>
                            <td>@Model[i].Kategory</td>
                            <td>@Model[i].PhoneNumber</td>
                            <td>@Model[i].Email</td>
                            <td><a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger" onclick="return ConfirmDelete();">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@section Scripts
    {
    <script src="~/js/dialogs.js"></script>
}

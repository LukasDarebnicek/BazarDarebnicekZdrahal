@model Product

@{
    ViewData["Title"] = "Product - Edit";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ImageSrc">Image Source</label>
        <input class="form-control" asp-for="ImageSrc">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Kategory">Kategory</label>
        <input class="form-control" asp-for="Kategory">
    </div>
    <input type="hidden" class="form-control" asp-for="UserId">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
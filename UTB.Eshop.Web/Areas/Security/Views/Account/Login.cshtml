@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@section Styles
    {
    <link rel="stylesheet" href="~/css/login.css" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Login" method="post" class="form-signin">
                        <h2 class="card-title text-center mb-4">Přihlášení</h2>
                        <hr>

                        @if (Model?.LoginFailed == true)
                        {
                            <div class="alert alert-danger">Přihlášení se nezdařilo!</div>
                        }

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <input asp-for="Username" type="text" id="inputUsername" class="form-control" placeholder="Uživatelské jméno" autofocus="">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Heslo">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button class="btn btn-success btn-block" type="submit">Přihlásit se</button>

                        <hr>

                        <p class="text-center">
                            <a asp-action="Register" class="btn btn-outline-primary" id="btn-signup">Registrovat nový účet</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}